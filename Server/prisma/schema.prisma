generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id            String   @id @default(auto()) @map("_id") @db.ObjectId
    name          String?
    email         String   @unique
    image         String?
    bookedVisits  Json[]
    favResidencesID String[] @db.ObjectId
    ownedResidencies Residency[] @relation("Owner")
}

model Residency {
    id           String   @id @default(auto()) @map("_id") @db.ObjectId
    title        String
    description  String
    price        Float
    address      String
    city         String
    coutry       String
    image        String[]
    facilities   String[]
    userEmail    String
    owner        User     @relation(fields: [userEmail], references: [email])
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt
    bookedVisits Json[]
    favoritedBy  String[] @db.ObjectId

    User User[] @relation("Owner")
}
